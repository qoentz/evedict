package view

import "github.com/qoentz/evedict/internal/llm"

templ MainEventFeed() {
    @BaseLayout()  <!-- The BaseLayout will handle rendering -->
}

templ EventFeed(predictions []llm.Prediction) {
    <div class="event-container">
        for _, p := range predictions {
            <div class="event-item">
                <img src="/static/images/placeholder.jpg" alt="Event image" class="event-image" />
                <h2 class="event-headline">{ p.Title }</h2>
                <p class="event-content">{ p.Content }</p>
            </div>
        }
    </div>
}








